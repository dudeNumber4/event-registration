@page "/edit-registration/{RegistrationId}"
@using EventRegistration.ViewModels
@using EventRegistration.Services
@inject RegistrationService RegistrationService

<h3>Edit Registration</h3>
<div>SHOW REGISTRANT'S name HERE</div>

<div class="container">
  <div class="row">
    <div class="col">
      <SelectSessions />
    </div>
    <div class="col">
      <SelectedSessions />
    </div>
  </div>
</div>

@code {
  private EditRegistrationViewModel model;

  [Parameter]
  public string RegistrationId { get; set; }

  protected override void OnInitialized()
  {
    if (int.TryParse(RegistrationId, out var id))
    {
      model = new(RegistrationService, id);
    }
  }
}
